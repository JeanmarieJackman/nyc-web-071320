<h1>Movie Index Page</h1>

<div class="index-container">
  <% @movies.each do |movie| %>
    <div class="index-tile">
      <h3><%= link_to movie.title, movie_path(movie.id)  %></h3>
      <h5>Release Year: <%= movie.year %></h5>
      
      <img class="index-img" src="<%= movie.img_url %>" alt="<%= movie.title%>">

      <hr>
      <h6>API Vote Count: <%= movie.vote_count %></h6>
      <h6>API Average Vote: <%= movie.vote_average %></h6>
      <% if @current_user %>
        <%= button_to "X", movie_path(movie), method: :delete %>
      <% end %>
    </div>
  <% end %>
</div>